<div class="row">
  <div class="small-4 large-6 columns">
    <h1>Listing all Users</h1>
  </div>
</div>

<div class="row">
  <div class="small-6 large-10 large-offset-1 columns">
    <% @users.each do |user| %>
      <%= user.name %> | <%= user.comment %><br />
    <% end %>
  </div>
</div>

<div class="row">
  <div class="small-3 large-3 large-offset-3 columns">
    <%= link_to "New", new_user_path %>
  </div>
</div>
